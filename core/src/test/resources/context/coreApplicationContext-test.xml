<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="propertySourceConfigurer" class="com.es.core.config.PropertySourceConfigurer">
        <property name="propertySourceList">
            <list>
                <bean class="org.springframework.core.io.support.ResourcePropertySource">
                    <constructor-arg value="classpath:config/webApplication.properties" />
                </bean>
            </list>
        </property>
    </bean>

</beans>